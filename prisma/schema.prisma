// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("HOSTINGER_DB")
}


model Publi {
  id        String     @default(cuid()) @id
  title     String
  content   String? 
  imageUrl  String?
}

model Paciente {
  id                String      @default(cuid()) @id
  nombre            String
  apellido          String
  antecedentes      String
  edad              Int
  primeraVisita     String
  diagnostico       String
  sesiones          Sesion []
}


model Sesion {
  id                String         @default(cuid()) @id
  numero            Int
  comentarios       String?
  pacienteId        String
  fecha             String
  completada        Boolean        @default(false)
  paciente Paciente @relation(fields : [pacienteId], references : [id])
}
